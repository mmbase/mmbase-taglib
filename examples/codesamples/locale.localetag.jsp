<p>
  <mm:locale language="fr">
    <mm:cloud>
      <mm:fieldlist nodetype="object">
        <mm:fieldinfo type="guiname" />
        <mm:last inverse="true">, </mm:last>
      </mm:fieldlist>
    </mm:cloud>
  </mm:locale>
</p>
<p>
  <!-- contenttag is a locale tag too -->
  <mm:content language="fr">
    <mm:cloud>
      <mm:fieldlist nodetype="object">
        <mm:fieldinfo type="guiname" />
        <mm:last inverse="true">, </mm:last>
      </mm:fieldlist>
    </mm:cloud>
  </mm:content>
</p>
<p>
  <!-- the preferred locale as configured in the browser -->
  <mm:locale language="client"> 
    <mm:cloud>
      <mm:fieldlist nodetype="object">
        <mm:fieldinfo type="guiname" />
        <mm:last inverse="true">, </mm:last>
      </mm:fieldlist>
    </mm:cloud>
  </mm:locale>
</p>

