<mm:import externid="nodemanager" from="parameters" />
<table>
  <tr>
    <td valign="top">
      <mm:listnodes type="typedef">
        <a href="<mm:url page="nodemanagerinfo.jsp">
                     <mm:param name="nodemanager"><mm:field name="name" /></mm:param>
                 </mm:url>"><mm:field name="name" /></a><br />
      </mm:listnodes>
    </td>
    <td valign="top">
      <mm:present referid="nodemanager">
        <mm:listnodes type="typedef" constraints="name='${nodemanager}'">
          <p><strong><mm:field name="name" /></strong></p>
          <p><mm:field name="description" /></p>
        </mm:listnodes>

        <p><strong>Names of all fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="create">
          <mm:fieldinfo type="name" />
        </mm:fieldlist>

        <p><strong>GUI names of all fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="create">
          <mm:fieldinfo type="guiname"/>
        </mm:fieldlist>

        <p><strong>Names of all edit fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="edit">
          <mm:fieldinfo type="name"/>
        </mm:fieldlist>

        <p><strong>GUI names of all edit fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="edit">
          <mm:fieldinfo type="guiname"/>
        </mm:fieldlist>

        <p><strong>Names of all list fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="list">
          <mm:fieldinfo type="name"/>
        </mm:fieldlist>

        <p><strong>GUI names of all list fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="list">
          <mm:fieldinfo type="guiname"/>
        </mm:fieldlist>

        <p><strong>Names of all search fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="search">
          <mm:fieldinfo type="name"/>
        </mm:fieldlist>

        <p><strong>GUI names of all search fields</strong></p>
        <mm:fieldlist nodetype="${nodemanager}" type="search">
          <mm:fieldinfo type="guiname"/>
        </mm:fieldlist>

      </mm:present>
    </td>
  </tr>
</table>
